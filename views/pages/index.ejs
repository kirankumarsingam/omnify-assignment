<link rel = "stylesheet" href = "./css/main.css"/>

<body>
    <div class="total-bg-container">
        <h1 class="Weather-Report">Weather Report</h1>
        <div class="inputbox">
            <input type="search" class="search" placeholder="Search City Wheater" id="searchValue" />
            <button class="button" onclick="button()">Search</button>
        </div>
        
        <h1 id="notFoundLocation" style = "display : none;" class="location-not">Location Not Found</h1>
        <div id="weatherContainer" style = "display : none;">
            
            <div class="d-flex flex-row rain-total-set">
                <img src="./img/rainy.png" class="rainImage" id = "climateConditionImages"/>
                <div class="text-adjustment">
                    <h1 class="Heavy-Rain">Climate Condition</h1>
                    <p class="Heavy-Rain-degree" id="displayClimate">Hot</p>
                    <!--<p class="Heavy-Rain-degree">Humidity : 35%</p>-->
                </div>
            </div>

            <br />

            <div class="d-flex flex-row rain-total-set">
                <img src="./img/temparature.jpg" class="rainImage" />
                <div class="text-adjustment">
                    <h1 class="Heavy-Rain">Temparature</h1>
                    <p class="Heavy-Rain-degree" id="displayTemparature">35â„ƒ</p>
                    <!--<p class="Heavy-Rain-degree">Humidity : 31%</p>-->
                </div>
            </div>

            <div class="d-flex flex-row rain-total-set">
                <img src="./img/humidity.webp" class="rainImage" />
                <div class="text-adjustment">
                    <h1 class="Heavy-Rain">Humidity</h1>
                    <p class="Heavy-Rain-degree" id="displayHumidity">30%</p>
                    <!--<p class="Heavy-Rain-degree">Humidity : 40%</p>-->
                </div>
            </div>

        </div>
    </div>
</body>
